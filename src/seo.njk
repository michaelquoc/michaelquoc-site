layout: null
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SEO Governance | Michael Quoc</title>
    <meta name="robots" content="noindex, nofollow">
    <style>
        :root { --bg: #0F0F0F; --text: #F0F0F0; --red: #FF4F00; --green: #00DC82; --yellow: #DCDF00; --border: #333; }
        body { background: var(--bg); color: var(--text); font-family: 'JetBrains Mono', monospace; padding: 2rem; font-size: 12px; }
        h1 { margin-bottom: 2rem; border-bottom: 1px solid var(--border); padding-bottom: 1rem; }
        
        table { width: 100%; border-collapse: collapse; }
        th, td { text-align: left; padding: 12px; border-bottom: 1px solid var(--border); vertical-align: top; }
        th { color: var(--text-secondary); text-transform: uppercase; letter-spacing: 1px; }
        
        .status-ok { color: var(--green); }
        .status-warn { color: var(--yellow); }
        .status-fail { color: var(--red); font-weight: bold; }
        
        .pill { padding: 2px 6px; border-radius: 4px; border: 1px solid var(--border); background: #222; }
        a { color: inherit; text-decoration: none; border-bottom: 1px dotted var(--text); }
        a:hover { color: var(--red); }
        
        .char-count { color: #666; margin-left: 8px; font-size: 10px; }
    </style>
</head>
<body>
    <h1>SYSTEM_SEO_GOVERNANCE // {{ collections.all | length }} NODES</h1>
    
    <table>
        <thead>
            <tr>
                <th style="width: 50px;">St</th>
                <th style="width: 250px;">URL</th>
                <th style="width: 300px;">Title (Rec: 50-60)</th>
                <th>Description (Rec: 150-160)</th>
            </tr>
        </thead>
        <tbody>
        {% for page in collections.all | sort(attribute="url") %}
            {% if page.url and page.url != '/_seo/' %}
            
            {% set titleLen = page.data.title | length %}
            {% set descLen = page.data.description | length %}
            
            {# LOGIC: Determine Status #}
            {% set status = "ok" %}
            {% if not page.data.title or not page.data.description %}
                {% set status = "fail" %}
            {% elseif titleLen > 65 or descLen > 165 or descLen < 50 %}
                {% set status = "warn" %}
            {% endif %}

            <tr>
                <td>
                    {% if status == "ok" %}<span class="status-ok">●</span>{% endif %}
                    {% if status == "warn" %}<span class="status-warn">●</span>{% endif %}
                    {% if status == "fail" %}<span class="status-fail">FAIL</span>{% endif %}
                </td>
                <td style="opacity: 0.7;">
                    <a href="{{ page.url }}" target="_blank">{{ page.url }}</a>
                </td>
                <td>
                    {% if page.data.title %}
                        {{ page.data.title }}
                        <span class="char-count {% if titleLen > 60 %}status-warn{% endif %}">[{{ titleLen }}]</span>
                    {% else %}
                        <span class="status-fail">MISSING TITLE</span>
                    {% endif %}
                </td>
                <td>
                    {% if page.data.description %}
                        {{ page.data.description }}
                        <span class="char-count {% if descLen > 160 %}status-warn{% endif %}">[{{ descLen }}]</span>
                    {% else %}
                        <span class="status-fail">MISSING DESCRIPTION</span>
                    {% endif %}
                </td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</body>
</html>