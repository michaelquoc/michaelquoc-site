{% macro physics(title, subtitle, gravity, date, url, entities) %}
<a href="{{ url }}" class="physics-card">
    <div style="display:flex; justify-content:space-between; margin-bottom: 1rem; align-items: center;">
        <span class="mono-label" style="opacity: 0.5;">{{ date }}</span>
        <span class="mono-label" style="color: #EAEAEA; border: 1px solid #333; padding: 2px 8px; border-radius: 4px;">
            {{ gravity }} G
        </span>
    </div>

    <h3 class="h3-title" style="margin-bottom: 0.5rem; font-size: 1.4rem;">
        {{ title }}
    </h3>
    
    <p class="mono-label" style="color: var(--scuderia-red); margin-bottom: 1.5rem; text-transform: none;">
        // {{ subtitle }}
    </p>

    <div style="margin-top: auto; padding-top: 1rem; border-top: 1px solid #222;">
        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
            {% for entity in entities | slice(0, 3) %}
            <span style="font-size: 0.7rem; color: #888; background: #1A1A1A; padding: 3px 8px; border-radius: 2px;">
                {{ entity }}
            </span>
            {% endfor %}
        </div>
    </div>
</a>
{% endmacro %}

{% macro kinetic(title, subtitle, description, url) %}
<a href="{{ url }}" class="kinetic-card">
    <div>
        <span class="mono-label">{{ subtitle }}</span>
        <h4 style="font-size: 1.25rem; font-weight: 500; margin-top: 0.5rem; color: #FFF;">
            {{ title }}
        </h4>
    </div>
    <p style="font-size: 0.9rem; color: var(--text-secondary); margin-top: 1rem;">
        {{ description }}
    </p>
</a>
{% endmacro %}